@model eMartHoangMinh.Models.FE.News
@{
    ViewBag.Title = "Chi tiết tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Create category</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/home">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="/admin/category">Tin tức</a></li>
                    <li class="breadcrumb-item active">Chi tiết tin tức</li>
                </ol>
            </div>
        </div>
    </div>
</section>

@*main*@
<section class="content">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Chi tiết tin tức</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Detail", "News", FormMethod.Post, new { }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="bs-stepper-content">
                    <div class="form-group">
                        <label for="Name">Tiêu đề</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Tiêu đề tin tức", @type = "text", @id = "inputTitle" })
                    </div>
                    <div class="form-group">
                        <label for="Detail">Chi tiết</label>
                        @Html.TextAreaFor(x => x.Detail, new { @class = "form-control", @placeholder = "Chi tiết", @id = "inputDescription", @rows = "4" })
                    </div>
                    <div class="form-group">
                        <label for="Description">Mô tả</label>
                        @Html.TextBoxFor(x => x.Description, new { @class = "form-control", @placeholder = "Seo name", @type = "text", @id = "inputSeoName" })
                    </div>
                    <div class="form-group">
                        <label for="CreateDate">Ngày tạo</label>
                        @Html.TextAreaFor(x => x.CreateDate, new { @class = "form-control", @placeholder = "This is seo description....", @id = "inputSeoDescription", @rows = "4" })
                    </div>
                    <div class="form-group">
                        <label for="CreateBy">Người tạo</label>
                        @Html.TextAreaFor(x => x.CreateBy, new { @class = "form-control", @placeholder = "This is keywords for seo....", @id = "inputKeywords", @rows = "4" })
                    </div>
                    <div class="form-group">
                        <label for="Image">Hình ảnh</label>
                        @Html.TextBoxFor(x => x.Image, new { @class = "form-control", @value = 1, @type = "number", @id = "inputSpentBudget" })
                    </div>
                    <div class="form-group">
                        <a href="#" class="btn btn-secondary">Hủy</a>
                        <input type="submit" formaction="Edit" value="Lưu" class="btn btn-success">
                    </div>
                </div>
            }

        </div>
    </div>

</section>

