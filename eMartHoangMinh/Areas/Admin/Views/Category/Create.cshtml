@model eMartHoangMinh.Models.FE.Category
@{
    ViewBag.Title = "Tạo mới danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section leftNavbar{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">Danh mục</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link active">Thêm mới</a>
        </li>
    </ul>
}

@*header*@
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Tạo mới danh mục</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/home">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="/admin/category">Danh mục</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div>
</section>

@*main*@
<section class="content">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Thông tin danh mục</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "Category", FormMethod.Post, new { }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="bs-stepper-content">
                    <div class="form-group">
                        <label for="Name">Tên danh mục</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Category name", @type = "text", @id = "inputName" })
                        @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="Description">Mô tả</label>
                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "This is category....", @id = "inputDescription", @rows = "4" })
                    </div>
                    <div class="form-group">
                        <label for="SeoName">Tên SEO</label>
                        @Html.TextBoxFor(x => x.SeoName, new { @class = "form-control", @placeholder = "Seo name", @type = "text", @id = "inputSeoName" })
                    </div>
                    <div class="form-group">
                        <label for="SeoDescription">Mô tả SEO</label>
                        @Html.TextAreaFor(x => x.SeoDescription, new { @class = "form-control", @placeholder = "This is seo description....", @id = "inputSeoDescription", @rows = "4" })
                    </div>
                    <div class="form-group">
                        <label for="SeoKeywords">Seo Keywords</label>
                        @Html.TextAreaFor(x => x.SeoKeywords, new { @class = "form-control", @placeholder = "This is keywords for seo....", @id = "inputKeywords", @rows = "4" })
                    </div>
                    <div class="form-group">
                        <label for="Position">Vị trí hiển thị</label>
                        @Html.TextBoxFor(x => x.Position, new { @class = "form-control", @value = 1, @type = "number", @id = "inputSpentBudget" })
                    </div>
                    <div class="form-group">
                        <a href="#" class="btn btn-secondary">Hủy</a>
                        <input type="submit" formaction="Create" value="Lưu" class="btn btn-success">
                    </div>
                </div>
            }

        </div>
    </div>

</section>