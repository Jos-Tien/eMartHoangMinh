@model eMartHoangMinh.Models.FE.ProductCategory
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section leftNavbar{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/productcategory" class="nav-link">Danh mục sản phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link active">Sửa danh mục sản phẩm</a>
        </li>
    </ul>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Create category</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/home">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="/admin/productcategory">Danh mục sản phẩm</a></li>
                    <li class="breadcrumb-item active">Cập nhật danh mục sản phẩm</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Thông tin danh mục sản phẩm</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Edit", "ProductCategory", FormMethod.Post, new { }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(x => x.ID)
                <div class="bs-stepper-content">
                    <div class="form-group">
                        <label for="Name">Name</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Category name", @type = "text", @id = "inputName" })
                        @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="Description">Description</label>
                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "This is category....", @id = "inputDescription", @rows = "4" })
                    </div>
                    <div class="form-group">
                        <label for="SeoName">Seo Name</label>
                        @Html.TextBoxFor(x => x.SeoName, new { @class = "form-control", @placeholder = "Seo name", @type = "text", @id = "inputSeoName" })
                    </div>
                    <div class="form-group">
                        <label for="SeoDescription">Seo Description</label>
                        @Html.TextAreaFor(x => x.SeoDescription, new { @class = "form-control", @placeholder = "This is seo description....", @id = "inputSeoDescription", @rows = "4" })
                    </div>
                    <div class="form-group">
                        <label for="SeoKeywords">Seo Keywords</label>
                        @Html.TextAreaFor(x => x.SeoKeywords, new { @class = "form-control", @placeholder = "This is keywords for seo....", @id = "inputKeywords", @rows = "4" })
                    </div>
                    <div class="form-group">
                        <label for="Position">Position</label>
                        @Html.TextBoxFor(x => x.Position, new { @class = "form-control", @value = 1, @type = "number", @id = "inputSpentBudget" })
                    </div>
                    <div class="form-group">
                        <a href="/admin/productcategory" class="btn btn-secondary">Hủy</a>
                        <input type="submit" formaction="Edit" value="Lưu" class="btn btn-success">
                    </div>
                </div>
            }
        </div>
    </div>
</section>

