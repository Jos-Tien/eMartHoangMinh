@model IEnumerable<eMartHoangMinh.Models.FE.Category>
@{
    ViewBag.Title = "Quản lý danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section leftNavbar{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link active">Danh mục</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý danh mục</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/home">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Danh mục</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách danh mục</h3>

            <div class="card-tools">
                <a href="/admin/category/create" class="btn btn-primary">Tạo mới</a>

            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr class="text-center">
                        <th>STT</th>
                        <th>Tên danh mục</th>
                        <th>Vị trí</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            <tr class="text-center" id="trow_@item.ID">
                                <td>@i</td>
                                <td>@item.Name</td>
                                <td>@item.Position</td>
                                <td>
                                    <a href="/admin/category/edit/@item.ID" class="btn btn-sm btn-primary">Sửa</a>
                                    @*<a href="#" data-id="@item.ID" class="btn btn-sm btn-danger btnDelete" onclick="DeleteCategory(@item.ID)">Xóa</a>*@
                                    <a href="#" data-id="@item.ID" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10">Không có dữ liệu !!!</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
        </div>
    </div>
</section>

@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data('id');
                var conf = confirm('Bạn có muốn xóa bản ghi này không?');
                if (conf === true) {
                    $.ajax({
                        url: 'category/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success === true) {
                                $('#trow_' + id).fadeTo('fast', 0.5, function () {
                                    $(this).slideUp('fast', function () { $(this).remove(); });
                                });
                            }
                        }
                    });
                }
            });
        });
    </script>
}
