@model eMartHoangMinh.Models.FE.Product
@{
    ViewBag.Title = "Thêm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/ckeditor/ckeditor.js"></script>
<script src="~/Content/ckfinder/ckfinder.js"></script>

@section leftNavbar{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/products" class="nav-link">Sản phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link active">Thêm sản phẩm</a>
        </li>
    </ul>
}

@*header*@
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/home">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="/admin/products">Sản phậm</a></li>
                    <li class="breadcrumb-item active">Thêm sản phẩm</li>
                </ol>
            </div>
        </div>
    </div>
</section>

@*main*@
<section class="content">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Thông tin danh mục sản phẩm</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "Products", FormMethod.Post, new { }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="bs-stepper-content">
                    <div class="card">
                        <div class="card-header p-2">
                            <ul class="nav nav-pills">
                                <li class="nav-item"><a class="nav-link active" href="#productInfo" data-toggle="tab">Sản phẩm</a></li>
                                <li class="nav-item"><a class="nav-link" href="#productImage" data-toggle="tab">Hình ảnh</a></li>
                                <li class="nav-item"><a class="nav-link" href="#productSEO" data-toggle="tab">SEO</a></li>
                            </ul>
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="active tab-pane" id="productInfo">
                                    <div class="form-group">
                                        <label for="Name">Tiêu đề</label>
                                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Tiêu đề sản phẩm", @type = "text", @id = "inputName" })
                                        @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="Description">Mô tả</label>
                                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Mô tả", @id = "inputDescription", @rows = "4" })
                                    </div>
                                    <div class="form-group">
                                        <label for="Detail">Chi tiết</label>
                                        @Html.TextAreaFor(x => x.Detail, new { @class = "form-control", @placeholder = "Chi tiết", @id = "inputDetail", @rows = "4" })
                                        <script>CKEDITOR.replace("inputDetail");</script>
                                    </div>
                                    <div class="form-group">
                                        <label for="Price">Giá</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">$</span>
                                            </div>
                                            @Html.TextBoxFor(x => x.Price, new { @class = "form-control", @type = "number", @placeholder = "Giá bán", @id = "inputPrice"  })
                                            <div class="input-group-append">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="PriceSale">Giá sale</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">$</span>
                                            </div>
                                            @Html.TextBoxFor(x => x.PriceSale, new { @class = "form-control", @type = "number", @placeholder = "Giá sale", @id = "inputPriceSale", @rows = "4" })
                                            <div class="input-group-append">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="Quantity">Số lượng</label>
                                        @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control", @type= "number", @placeholder = "Số lượng", @id = "inputQuantity", @rows = "4" })
                                    </div>
                                </div>
                                <!-- /.tab-pane -->
                                <div class="tab-pane" id="productImage">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        <div class="time-label">
                                            <span class="bg-danger">
                                                10 Feb. 2014
                                            </span>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            <i class="fas fa-envelope bg-primary"></i>

                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i> 12:05</span>

                                                <h3 class="timeline-header"><a href="#">Support Team</a> sent you an email</h3>

                                                <div class="timeline-body">
                                                    Etsy doostang zoodles disqus groupon greplin oooj voxy zoodles,
                                                    weebly ning heekya handango imeem plugg dopplr jibjab, movity
                                                    jajah plickers sifteo edmodo ifttt zimbra. Babblely odeo kaboodle
                                                    quora plaxo ideeli hulu weebly balihoo...
                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="#" class="btn btn-primary btn-sm">Read more</a>
                                                    <a href="#" class="btn btn-danger btn-sm">Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- END timeline item -->
                                        <!-- timeline item -->
                                        <div>
                                            <i class="fas fa-user bg-info"></i>

                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i> 5 mins ago</span>

                                                <h3 class="timeline-header border-0">
                                                    <a href="#">Sarah Young</a> accepted your friend request
                                                </h3>
                                            </div>
                                        </div>
                                        <!-- END timeline item -->
                                        <!-- timeline item -->
                                        <div>
                                            <i class="fas fa-comments bg-warning"></i>

                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i> 27 mins ago</span>

                                                <h3 class="timeline-header"><a href="#">Jay White</a> commented on your post</h3>

                                                <div class="timeline-body">
                                                    Take me to your leader!
                                                    Switzerland is small and neutral!
                                                    We are more like Germany, ambitious and misunderstood!
                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="#" class="btn btn-warning btn-flat btn-sm">View comment</a>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- END timeline item -->
                                        <!-- timeline time label -->
                                        <div class="time-label">
                                            <span class="bg-success">
                                                3 Jan. 2014
                                            </span>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            <i class="fas fa-camera bg-purple"></i>

                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i> 2 days ago</span>

                                                <h3 class="timeline-header"><a href="#">Mina Lee</a> uploaded new photos</h3>

                                                <div class="timeline-body">
                                                    <img src="https://placehold.it/150x100" alt="...">
                                                    <img src="https://placehold.it/150x100" alt="...">
                                                    <img src="https://placehold.it/150x100" alt="...">
                                                    <img src="https://placehold.it/150x100" alt="...">
                                                </div>
                                            </div>
                                        </div>
                                        <!-- END timeline item -->
                                        <div>
                                            <i class="far fa-clock bg-gray"></i>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.tab-pane -->

                                <div class="tab-pane" id="productSEO">
                                    <form class="form-horizontal">
                                        <div class="form-group">
                                            <label for="SeoTitle">Tiêu đề SEO</label>
                                            @Html.TextBoxFor(x => x.SeoTitle, new { @class = "form-control", @placeholder = "Tiêu đề Seo", @type = "text" })
                                        </div>
                                        <div class="form-group">
                                            <label for="Description">Mô tả</label>
                                            @Html.TextAreaFor(x => x.SeoDescription, new { @class = "form-control", @placeholder = "Mô tả Seo", @rows = "4" })
                                        </div>
                                        <div class="form-group">
                                            <label for="SeoKeywords">Keywords Seo</label>
                                            @Html.TextAreaFor(x => x.SeoKeywords, new { @class = "form-control", @placeholder = "Keywords Seo", @rows = "4" })
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="form-group">
                                <a href="#" class="btn btn-secondary">Hủy</a>
                                <input type="submit" formaction="Create" value="Lưu" class="btn btn-success">
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<script>
    function BrowserServer(field) {
        var finder = new CKFinder();
        finder.selectActionFunction = function (fieldUrl) {
            document.getElementById(field).value = fieldUrl;
        };
        finder.popup();
    }



</script>

